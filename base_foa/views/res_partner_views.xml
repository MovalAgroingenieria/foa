<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.base_ter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_ter.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//img[@src='/base_ter/static/description/icon.png']" position="replace">
                <img src="/base_foa/static/description/icon.png"
                    alt="parcel logo"
                    style="width:40px"
                    class="img-thumbnail align-middle"/>
            </xpath>
        </field>
    </record>

</odoo>